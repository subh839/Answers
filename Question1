        <button onclick="myFunction()">Click Me</button>
    </div>
    <script>
        var cities = ["Kolkata", "Bangalore", "Mumbai", "Delhi", "Hydrabad"];
        document.getElementById("city1").innerHTML = cities[0] + "<br>";
        document.getElementById("city2").innerHTML = cities[1] + "<br>";
        document.getElementById("city3").innerHTML = cities[2] + "<br>";
        document.getElementById("city4").innerHTML = cities[3] + "<br>";
        document.getElementById("city5").innerHTML = cities[cities.length - 1] + "<br>";

        const myFunction = () => {
  const randomColor = Math.floor(Math.random()*16777215).toString(16);
  //Math.random() * 16777215 generates no. and  convert into string 
   document.body.style.backgroundColor = "#" + randomColor;
  color.innerHTML = "#" + randomColor;
  // As html colors start with #
}

    </script>
</body>

